{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "ignoreDeprecations": "5.0",
    "baseUrl": "./",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "types": ["node", "express"],
    "paths": {
      "*": ["node_modules/*", "src/*"]
    }
  },
  "ts-node": {
    "files": true,
    "transpileOnly": true
  },
  "exclude": [
    "./coverage",
    "./dist",
    "jest.config.js",
    "__tests__",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "include": ["src/**/*","types/**/*.d.ts","globalTeardown.ts"]
}
